    <tr>
      <td><a href='/players/batters/<%= batter.master.id %>'><%= batter.master.nameLast %></a></td>
      <td><%= batter.master.nameFirst %></td>
      <td><%= batter.teamID %></td>
      <td><%= batter.lgID %></td>
      <td><%= batter.w %></td>
      <td><%= batter.l %></td>
      <td><%= batter.g %></td>
      <td><%= batter.gs %></td>
      <td><%= batter.cg %></td>
      <td><%= batter.sho %></td>
      <td><%= batter.sv %></td>
