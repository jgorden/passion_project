            <%= batter.ipouts / 3 %>
          <% end %>
      </td>
      <td><%= batter.h %></td>
      <td><%= batter.er %></td>
      <td><%= batter.hr %></td>
      <td><%= batter.bb %></td>
      <td><%= batter.so %></td>
      <td><%= batter.k_nine.round(2) %></td>
      <td><%= batter.bb_nine.round(2) %></td>
      <td><%= batter.baopp %></td>
      <td><%= batter.era %></td>
      <td><%= batter.ibb %></td>
      <td><%= batter.wp %></td>
      <td><%= batter.hbp %></td>
      <td><%= batter.bk %></td>
      <td><%= batter.bfp %></td>
      <td><%= batter.gf %></td>
      <td><%= batter.r %></td>
      <td><%= batter.sh %></td>
      <td><%= batter.sf %></td>
      <td><%= batter.gidp %></td>
    </tr>
  <% end %>
