<% @master.pitchers.each do |pitcher| %>
    <tr>
      <td><%= pitcher.yearID %></td>
      <td><%= pitcher.teamID %></td>
      <td><%= pitcher.lgID %></td>
      <td><%= pitcher.w %></td>
      <td><%= pitcher.l %></td>
      <td><%= pitcher.g %></td>
      <td><%= pitcher.gs %></td>
      <td><%= pitcher.cg %></td>
      <td><%= pitcher.sho %></td>
      <td><%= pitcher.sv %></td>
      <td><%= pitcher.ipouts / 3 %></td>
      <td><%= pitcher.h %></td>
      <td><%= pitcher.er %></td>
      <td><%= pitcher.hr %></td>
      <td><%= pitcher.bb %></td>
      <td><%= pitcher.so %></td>
      <td><%= ((pitcher.so.to_f / (pitcher.ipouts.to_f / 3.0)).to_f * 9.0).round(2) %></td>
      <td><%= ((pitcher.bb / (pitcher.ipouts / 3.0)).to_f * 9.0).round(2) %></td>
      <td><%= pitcher.baopp %></td>
      <td><%= pitcher.era %></td>
      <td><%= pitcher.ibb %></td>
      <td><%= pitcher.wp %></td>
      <td><%= pitcher.hbp %></td>
      <td><%= pitcher.bk %></td>
      <td><%= pitcher.bfp %></td>
      <td><%= pitcher.gf %></td>
      <td><%= pitcher.r %></td>
      <td><%= pitcher.sh %></td>
      <td><%= pitcher.sf %></td>
      <td><%= pitcher.gidp %></td>
    </tr>
  <% end %>
</table>

